<div class="content-section info-section" id="infoSection">
  <h4 class="content-section-head"><span>Edit Field</span></h4>
  <form class="form" action="/<%= "#{@field.scoped_by_class}/fields/#{@resource}/manage/#{@field.id}" %>" method="post" autocomplete="off" novalidate="novalidate">
    <div class="form-actions"><input type="submit" name="save" value="save" /></div>
    <fieldset class="field-group field-info">
      <legend class="field-group-head"><span>Field Info</span></legend>
      <p class="field text-field name">
        <label>
          <span class="field-label">Name</span>
          <input class="input" type="text" name="field[name]" value="<%= @field.name %>" />
        </label>
      </p>
    </fieldset>
    <p class="form-actions">
      <input name="_method" type="hidden" value="put" />
      <input  class="action save-action" type="submit" name="save" value="save" />
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <a class="cancel-link" title="Close form and discard any unsaved changes" href="/<%= @field.scoped_by_class %>/fields/<%= @resource %>/has_lists/manage/fields">cancel</a>
    </p>
  </form>
</div>