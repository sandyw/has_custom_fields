<div class="content-section field-section" id="fieldSection">
  <h4 class="content-section-head"><span>Edit Field</span></h4>
  <%= common_error_messages(:advisor) %>
  <form class="form" action="/<%= "#{@field.scoped_by_class}/#{@scope_object.id}/fields/manage/#{@field.id}" %>" method="post" autocomplete="off" novalidate="novalidate">
    <div class="form-actions"><input type="submit" name="save" value="save" /></div>
    <fieldset class="field-group field-info">
      <legend class="field-group-head"><span>Field Info</span></legend>
      <p class="field text-field name">
        <label>
          <span class="field-label">Name</span>
          <input class="input" type="text" name="field[name]" value="<%= @field.name %>" />
        </label>
      </p>
    </fieldset>
    <% if @field.style == 'select' %>
      <fieldset class="field-group field-select-options">
        <legend class="field-group-head"><span>Select Options</span></legend>
        <p class="field text-field">
          <label>
            <% ([@field.field_select_options.size,3].max).times do |option| %>
              <%= hidden_field_tag "field[field_select_options_attributes][#{option}][id]", @field.field_select_options[option].try(:id) %>
              <%= text_field_tag "field[field_select_options_attributes][#{option}][option]",@field.select_options_data[option] %>
            <% end %>
            <input  class="save-action" type="submit" name="add_select_option" value="add option" />
          </label>
        </p>
      </fieldset>
    <% end %>
    <p class="form-actions">
      <a class="action delete-action" title="Permanantly delete this field." href="/destroy_confirmation?path=/<%= "#{@field.scoped_by_class}/#{@scope_object.id}/fields/manage/#{@field.id}" %>">delete</a>
      <input name="_method" type="hidden" value="put" />
      <input  class="action save-action" type="submit" name="save" value="save" />
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <a class="cancel-link" title="Close form and discard any unsaved changes" href="/<%= "#{@field.scoped_by_class}/#{@scope_object.id}/fields/manage" %>">cancel</a>
    </p>
  </form>
</div>

